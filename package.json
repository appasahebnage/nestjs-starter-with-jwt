{
  "name": "nestjs-starter-with-jwt",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "Appasaheb Nage",
    "email": "appasahebnage7@gmail.com",
    "url": "https://appasahebnage.github.io"
  },
  "license": "MIT LICENSE",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main",
    "start:dev": "nest start",
    "prestart:dev:watch": "npm run db:dev:restart",
    "start:dev:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "dotenv -e .env.test --  jest",
    "test": "npm run test:unit && npm run test:int && npm run test:e2e",
    "posttest": "npm run db:test:rm",
    "pretest:int": "npm run db:test:restart",
    "test:int": "dotenv -e .env.test -- jest -i --no-cache --config jest-int.json",
    "posttest:int": "npm run db:test:rm",
    "pretest:int:watch": "npm run db:test:restart",
    "test:int:watch": "dotenv -e .env.test -- jest -i --no-cache --watch --config jest-int.json",
    "posttest:int:watch": "npm run db:test:rm",
    "pretest:e2e": "npm run db:test:restart",
    "test:e2e": "dotenv -e .env.test -- jest --no-cache --config ./test/jest-e2e.json",
    "posttest:e2e": "npm run db:test:rm",
    "pretest:e2e:watch": "npm run db:test:restart",
    "test:e2e:watch": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
    "posttest:e2e:watch": "npm run db:test:rm",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:up": "docker compose up dev-db --remove-orphans -d",
    "prisma:dev:deploy": "prisma migrate deploy",
    "prisma:dev:seed": "dotenv -e .env -- ts-node prisma/seed.ts",
    "prisma:test:seed": "dotenv -e .env.test -- ts-node prisma/seed.ts",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && sleep 10 && npm run prisma:dev:deploy && npm run prisma:dev:seed",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "db:test:up": "docker compose up test-db --remove-orphans -d",
    "prisma:test:deploy": "dotenv -e .env.test -- npx prisma migrate deploy",
    "db:test:restart": "npm run db:test:rm && npm run db:test:up && sleep 10 && npm run prisma:test:deploy && npm run prisma:test:seed",
    "sample-command": "dotenv -e .env -- ts-node ./src/cli.ts sample-command",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/swagger": "^7.3.1",
    "@prisma/client": "^5.15.1",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "nest-commander": "^3.13.0",
    "nestjs-zod": "^3.0.0",
    "pactum": "^3.7.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.8",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "prisma": "^5.15.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
    "src/(.*)": "<rootDir>/../src/$1"
  }
  }
}
